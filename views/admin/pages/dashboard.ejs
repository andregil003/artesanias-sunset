<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    
    <!-- CSS Base -->
    <link rel="stylesheet" href="/css/main.css">
    <link rel="stylesheet" href="/css/admin.css">
    
    <!-- jQuery -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
</head>
<body class="admin-body">
    
    <!-- Sidebar -->
    <aside class="admin-sidebar">
        <div class="sidebar-header">
            <h2>üåÖ</h2>
        </div>
        
        <nav class="sidebar-nav">
            <a href="/admin" class="nav-item active">
                <span class="nav-icon">üìä</span>
                <span class="nav-text">Dashboard</span>
            </a>
            
            <a href="/admin/products" class="nav-item">
                <span class="nav-icon">üì¶</span>
                <span class="nav-text">Productos</span>
            </a>
            
            <a href="/admin/categories" class="nav-item">
                <span class="nav-icon">üè∑Ô∏è</span>
                <span class="nav-text">Categor√≠as</span>
            </a>
            
            <a href="/admin/orders" class="nav-item">
                <span class="nav-icon">üõí</span>
                <span class="nav-text">√ìrdenes</span>
            </a>
            
            <div class="nav-divider"></div>
            
            <a href="/analytics" class="nav-item">
                <span class="nav-icon">üìà</span>
                <span class="nav-text">Anal√≠ticas</span>
            </a>
            
            <a href="/" class="nav-item">
                <span class="nav-icon">üè†</span>
                <span class="nav-text">Ver Tienda</span>
            </a>
        </nav>
    </aside>
    
    <!-- Main Content -->
    <div class="admin-main">
        <!-- Header -->
        <header class="admin-header">
            <div class="header-left">
                <h1 class="page-title">Dashboard</h1>
            </div>
            <div class="header-right">
                <span class="admin-user">üë§ Administrador</span>
            </div>
        </header>
        
        <!-- Content Area -->
        <main class="admin-content">
            <!-- KPIs Cards -->
            <div class="kpi-grid">
                <div class="kpi-card">
                    <div class="kpi-icon">üì¶</div>
                    <div class="kpi-info">
                        <h3 class="kpi-value"><%= kpis.total_products %></h3>
                        <p class="kpi-label">Productos Activos</p>
                    </div>
                </div>
                
                <div class="kpi-card">
                    <div class="kpi-icon">üè∑Ô∏è</div>
                    <div class="kpi-info">
                        <h3 class="kpi-value"><%= kpis.total_categories %></h3>
                        <p class="kpi-label">Categor√≠as</p>
                    </div>
                </div>
                
                <div class="kpi-card">
                    <div class="kpi-icon">üõí</div>
                    <div class="kpi-info">
                        <h3 class="kpi-value"><%= kpis.total_orders %></h3>
                        <p class="kpi-label">√ìrdenes Totales</p>
                    </div>
                </div>
                
                <div class="kpi-card">
                    <div class="kpi-icon">üí∞</div>
                    <div class="kpi-info">
                        <h3 class="kpi-value">Q<%= parseFloat(kpis.total_revenue).toFixed(2) %></h3>
                        <p class="kpi-label">Ingresos Totales</p>
                    </div>
                </div>
                
                <div class="kpi-card warning">
                    <div class="kpi-icon">‚è≥</div>
                    <div class="kpi-info">
                        <h3 class="kpi-value"><%= kpis.pending_orders %></h3>
                        <p class="kpi-label">√ìrdenes Pendientes</p>
                    </div>
                </div>
                
                <div class="kpi-card">
                    <div class="kpi-icon">üë•</div>
                    <div class="kpi-info">
                        <h3 class="kpi-value"><%= kpis.total_customers %></h3>
                        <p class="kpi-label">Clientes Registrados</p>
                    </div>
                </div>
            </div>

            <!-- Secci√≥n de alertas y datos importantes -->
            <div class="dashboard-grid">
                <!-- Productos con stock bajo -->
                <div class="dashboard-card">
                    <div class="card-header">
                        <h2>‚ö†Ô∏è Stock Bajo</h2>
                        <span class="badge"><%= lowStockProducts.length %></span>
                    </div>
                    <div class="card-body">
                        <% if (lowStockProducts.length > 0) { %>
                            <table class="simple-table">
                                <thead>
                                    <tr>
                                        <th>Producto</th>
                                        <th>Stock</th>
                                        <th>Precio</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% lowStockProducts.forEach(product => { %>
                                        <tr>
                                            <td><%= product.product_name %></td>
                                            <td><span class="badge-danger"><%= product.stock %></span></td>
                                            <td>Q<%= parseFloat(product.price).toFixed(2) %></td>
                                        </tr>
                                    <% }); %>
                                </tbody>
                            </table>
                        <% } else { %>
                            <p class="empty-state">‚úÖ Todos los productos tienen stock suficiente</p>
                        <% } %>
                    </div>
                </div>

                <!-- √ìrdenes recientes -->
                <div class="dashboard-card">
                    <div class="card-header">
                        <h2>üõí √ìrdenes Recientes</h2>
                        <a href="/admin/orders" class="btn-link">Ver todas ‚Üí</a>
                    </div>
                    <div class="card-body">
                        <% if (recentOrders.length > 0) { %>
                            <table class="simple-table">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Cliente</th>
                                        <th>Total</th>
                                        <th>Estado</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% recentOrders.forEach(order => { %>
                                        <tr>
                                            <td>#<%= order.order_id %></td>
                                            <td><%= order.customer_name || 'Invitado' %></td>
                                            <td>Q<%= parseFloat(order.total).toFixed(2) %></td>
                                            <td>
                                                <span class="badge-<%= order.status.toLowerCase() %>">
                                                    <%= order.status %>
                                                </span>
                                            </td>
                                        </tr>
                                    <% }); %>
                                </tbody>
                            </table>
                        <% } else { %>
                            <p class="empty-state">No hay √≥rdenes recientes</p>
                        <% } %>
                    </div>
                </div>
            </div>

            <!-- Acciones r√°pidas -->
            <div class="quick-actions">
                <h2>Acciones R√°pidas</h2>
                <div class="actions-grid">
                    <a href="/admin/products/new" class="action-card">
                        <span class="action-icon">‚ûï</span>
                        <span class="action-text">Nuevo Producto</span>
                    </a>
                    
                    <a href="/admin/categories" class="action-card">
                        <span class="action-icon">üè∑Ô∏è</span>
                        <span class="action-text">Gestionar Categor√≠as</span>
                    </a>
                    
                    <a href="/admin/orders" class="action-card">
                        <span class="action-icon">üìã</span>
                        <span class="action-text">Ver √ìrdenes</span>
                    </a>
                    
                    <a href="/analytics" class="action-card">
                        <span class="action-icon">üìä</span>
                        <span class="action-text">Reportes</span>
                    </a>
                </div>
            </div>
        </main>
    </div>
    
    <!-- Scripts -->
    <script src="/js/admin.js"></script>
</body>
</html>