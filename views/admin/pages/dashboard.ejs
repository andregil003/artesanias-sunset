<!-- public/views/admin/pages/dashboard.ejs -->
<header class="admin-header">
    <div class="header-left">
        <h1 class="page-title">Dashboard</h1>
    </div>
</header>

<main class="admin-content">
    <div class="kpi-grid">
        <div class="kpi-card">
            <div class="kpi-icon"><i class="nav-icon <%= icons.catalogBag %>"></i></div>
            <div class="kpi-info">
                <h3 class="kpi-value"><%= kpis.total_products %></h3>
                <p class="kpi-label">Productos Activos</p>
            </div>
        </div>
        
        <div class="kpi-card">
            <div class="kpi-icon"><i class="nav-icon fa-solid fa-tags"></i></div>
            <div class="kpi-info">
                <h3 class="kpi-value"><%= kpis.total_categories %></h3>
                <p class="kpi-label">Categorías</p>
            </div>
        </div>
        
        <div class="kpi-card">
            <div class="kpi-icon"><i class="nav-icon fa-solid fa-receipt"></i></div>
            <div class="kpi-info">
                <h3 class="kpi-value"><%= kpis.total_orders %></h3>
                <p class="kpi-label">Órdenes Totales</p>
            </div>
        </div>
        
        <div class="kpi-card">
            <div class="kpi-icon"><i class="nav-icon fa-solid fa-dollar-sign"></i></div>
            <div class="kpi-info">
                <h3 class="kpi-value">Q<%= parseFloat(kpis.total_revenue).toFixed(2) %></h3>
                <p class="kpi-label">Ingresos Totales</p>
            </div>
        </div>
        
        <div class="kpi-card warning">
            <div class="kpi-icon"><i class="nav-icon fa-solid fa-clock"></i></div>
            <div class="kpi-info">
                <h3 class="kpi-value"><%= kpis.pending_orders %></h3>
                <p class="kpi-label">Órdenes Pendientes</p>
            </div>
        </div>
        
        <div class="kpi-card">
            <div class="kpi-icon"><i class="nav-icon fa-solid fa-users"></i></div>
            <div class="kpi-info">
                <h3 class="kpi-value"><%= kpis.total_customers %></h3>
                <p class="kpi-label">Clientes Registrados</p>
            </div>
        </div>
    </div>

    <div class="dashboard-grid">
        <div class="dashboard-card">
            <div class="card-header">
                <h2><i class="fa-solid fa-triangle-exclamation"></i> Stock Bajo</h2>
                <span class="badge"><%= lowStockProducts.length %></span>
            </div>
            <div class="card-body">
                <% if (lowStockProducts.length > 0) { %>
                    <table class="simple-table">
                        <thead>
                            <tr>
                                <th>Producto</th>
                                <th>Stock</th>
                                <th>Precio</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% lowStockProducts.forEach(product => { %>
                                <tr>
                                    <td><%= product.product_name %></td>
                                    <td><span class="badge-danger"><%= product.total_stock %></span></td>
                                    <td>Q<%= parseFloat(product.price).toFixed(2) %></td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                <% } else { %>
                    <p class="empty-state"><i class="fa-solid fa-check-circle"></i> Todos los productos tienen stock suficiente</p>
                <% } %>
            </div>
        </div>

        <div class="dashboard-card">
            <div class="card-header">
                <h2><i class="fa-solid fa-receipt"></i> Órdenes Recientes</h2>
                <a href="/admin/orders" class="btn-link">Ver todas <i class="fa-solid fa-arrow-right"></i></a>
            </div>
            <div class="card-body">
                <% if (recentOrders.length > 0) { %>
                    <table class="simple-table">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Cliente</th>
                                <th>Total</th>
                                <th>Estado</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% recentOrders.forEach(order => { %>
                                <tr>
                                    <td>#<%= order.order_id %></td>
                                    <td><%= order.customer_name || 'Invitado' %></td>
                                    <td>Q<%= parseFloat(order.total).toFixed(2) %></td>
                                    <td>
                                        <span class="badge-<%= order.status.toLowerCase() %>">
                                            <%= order.status %>
                                        </span>
                                    </td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                <% } else { %>
                    <p class="empty-state">No hay órdenes recientes</p>
                <% } %>
            </div>
        </div>
    </div>
</main>