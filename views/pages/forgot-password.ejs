<!-- views/pages/forgot-password.ejs -->
<div class="container">
    <div class="auth-container">
        <div class="auth-box">
            <h1>Recuperar Contraseña</h1>
            
            <p class="text-center" style="color: var(--c3); margin-bottom: 20px;">
                Ingresa tu email y te enviaremos un enlace para restablecer tu contraseña.
            </p>
            
            <% if (error) { %>
                <div class="alert alert-error">
                    <svg width="20" height="20" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
                    </svg>
                    <span><%= decodeURIComponent(error) %></span>
                </div>
            <% } %>
            
            <% if (message) { %>
                <div class="alert alert-info">
                    <svg width="20" height="20" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
                    </svg>
                    <span><%= decodeURIComponent(message) %></span>
                </div>
            <% } %>
            
            <form action="/auth/forgot-password" method="POST" class="auth-form">
                <div class="form-group">
                    <label for="email">
                        <svg width="18" height="18" viewBox="0 0 20 20" fill="currentColor">
                            <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"/>
                            <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"/>
                        </svg>
                        Email
                    </label>
                    <input 
                        type="email" 
                        id="email" 
                        name="email" 
                        class="form-control" 
                        placeholder="tu@email.com"
                        required 
                        autofocus
                    >
                </div>
                
                <button type="submit" class="btn btn-primary btn-block">
                    Enviar Enlace de Recuperación
                </button>
            </form>
            
            <div class="auth-footer">
                <p>¿Recordaste tu contraseña? <a href="/auth/login" class="link-primary">Iniciar sesión</a></p>
            </div>
        </div>
    </div>
</div>