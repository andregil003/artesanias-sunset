<!-- views/pages/contact.ejs -->
<style>
    .contact-container {
        max-width: 1200px;
        margin: 2rem auto;
        padding: 0 1rem;
    }

    .contact-header {
        text-align: center;
        margin-bottom: 2rem;
        margin-top: 140px;
        padding: 0 1rem;
    }

    .contact-header h1 {
        font-size: 1.8rem;
        color: var(--text-color);
        margin-bottom: 0.8rem;
    }

    .contact-header p {
        font-size: 1rem;
        color: var(--text-light);
        line-height: 1.5;
    }

    .contact-grid {
        display: grid;
        grid-template-columns: 1fr;
        gap: 1.2rem;
        margin-bottom: 3rem;
        padding: 0 1rem;
    }

    .contact-card {
        background: white;
        padding: 2rem 1.5rem;
        border-radius: 8px;
        border: 2px solid var(--c4);
        text-align: center;
    }

    .contact-icon {
        font-size: 3.5rem;
        margin-bottom: 1rem;
        display: block;
        color: var(--primary-color);
    }

    .contact-card h3 {
        font-size: 1.4rem;
        color: var(--text-color);
        margin-bottom: 1rem;
        font-weight: 600;
    }

    .contact-card p {
        color: var(--text-light);
        margin-bottom: 0.6rem;
        font-size: 0.95rem;
    }

    .contact-info {
        font-weight: 600;
        color: var(--text-color);
        font-size: 1.05rem;
    }

    .contact-card a {
        display: inline-block;
        margin-top: 1.2rem;
        padding: 0.9rem 1.8rem;
        background-color: var(--primary-color);
        color: white;
        text-decoration: none;
        border-radius: 5px;
        font-weight: 500;
        font-size: 0.95rem;
    }

    .contact-card a:hover {
        background-color: var(--primary-hover);
    }

    .schedule-item {
        margin: 0.8rem 0;
        padding: 0.6rem;
        background: white;
        border-radius: 8px;
    }

    .schedule-item p {
        margin: 0.3rem 0;
        font-size: 0.9rem;
    }

    .closed {
        color: #e74c3c;
        font-weight: 600;
    }

    @media (min-width: 768px) {
        .contact-header {
            margin-top: 120px;
            margin-bottom: 2.5rem;
        }

        .contact-header h1 {
            font-size: 2.2rem;
        }

        .contact-header p {
            font-size: 1.05rem;
        }

        .contact-grid {
            grid-template-columns: repeat(2, 1fr);
            gap: 1.5rem;
        }

        .contact-card {
            padding: 2.5rem 2rem;
        }

        .contact-icon {
            font-size: 4rem;
            margin-bottom: 1.5rem;
        }
    }

    @media (min-width: 1024px) {
        .contact-header h1 {
            font-size: 2.5rem;
        }

        .contact-header p {
            font-size: 1.1rem;
        }
    }
</style>

<main class="contact-container">
    <div class="contact-header">
        <h1>Contáctanos</h1>
    </div>

    <div class="contact-grid">
        <!-- WhatsApp -->
        <div class="contact-card whatsapp-card">
            <i class="fa-brands fa-whatsapp contact-icon"></i>
            <h3>WhatsApp</h3>
            <p class="contact-info">+502 4129-8574</p>
            <a href="https://wa.me/50241298574" target="_blank">
                Chatear Ahora
            </a>
        </div>

        <!-- Email -->
        <div class="contact-card">
            <i class="fa-solid fa-envelope contact-icon"></i>
            <h3>Email</h3>
            <p class="contact-info">info@artesaniassunset.com</p>
            <a href="mailto:info@artesaniassunset.com">
                Enviar Email
            </a>
        </div>

        <!-- Teléfono -->
        <div class="contact-card">
            <i class="fa-solid fa-phone contact-icon"></i>
            <h3>Teléfono</h3>
            <p class="contact-info">+502 4129-8574</p>
            <a href="tel:+50241298574">
                Llamar Ahora
            </a>
        </div>

        <!-- Ubicación -->
        <div class="contact-card">
            <i class="fa-solid fa-location-dot contact-icon"></i>
            <h3>Ubicación</h3>
            <p class="contact-info">Guatemala City, Guatemala</p>
            <a href="https://maps.google.com" target="_blank">
                Ver en Maps
            </a>
        </div>
    </div>
</main>